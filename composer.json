{
    "name": "jdg/verifactu",
    "description": "VERI*FACTU es un sistema diseñado para combatir el fraude fiscal, centrado específicamente en la gestión del IVA/IGIC. Esta librería permite generar los hashes y enviar las facturas a la AEAT.",
    "type": "library",
    "keywords": ["verifactu", "iva", "igic", "facturación", "aeat", "hash"],
    "license": "MIT",
    "authors": [
        {
            "name": "José David Guillén",
            "email": "jd@infdj.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-hash": "*",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Verifactu\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Verifactu\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "fix": "vendor/bin/php-cs-fixer fix"
    }
}